@using DotNetEnglishP5_3.Models
@{
//@model List<ManageUserRolesViewModel>
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @ViewBag.UserName.
        </div>
        <div class="card-body">
            <input type="hidden" name="RoleName" />
            <select class="form-select" asp-items="Model" name="RoleId">
            </select>
    
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="Index" class="btn btn-primary" style="width:auto">
                Cancel
            </a>
        </div>
    </div>
</form>